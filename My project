<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Website with Database</title>
  <style>
    body { font-family: Arial, sans-serif; background: #f4f4f9; text-align: center; padding: 20px; }
    h1 { color: #0077cc; }
    input, button, textarea { margin: 5px; padding: 10px; border-radius: 5px; border: 1px solid #ccc; width: 80%; }
    button { background: #0077cc; color: white; border: none; cursor: pointer; }
    button:hover { background: #005999; }
    .card { background: white; padding: 20px; margin: 20px auto; border-radius: 10px; width: 350px; box-shadow: 0 0 5px rgba(0,0,0,0.2); }
  </style>
</head>
<body>

  <h1>Mini ICT Project</h1>
  <p>✔ Calculator + Login + Save Notes to Database</p>

  <!-- Calculator -->
  <div class="card">
    <h2>Calculator</h2>
    <input id="num1" type="number" placeholder="First number"><br>
    <input id="num2" type="number" placeholder="Second number"><br>
    <button onclick="add()">Add</button>
    <p id="calcResult"></p>
  </div>

  <!-- Login System -->
  <div class="card">
    <h2>Login / Signup</h2>
    <input id="email" type="email" placeholder="Email"><br>
    <input id="password" type="password" placeholder="Password"><br>
    <button onclick="signup()">Sign Up</button>
    <button onclick="login()">Login</button>
    <p id="authMsg"></p>
  </div>

  <!-- Notes System -->
  <div class="card" id="notesCard" style="display:none;">
    <h2>My Notes</h2>
    <textarea id="noteText" placeholder="Write a note..."></textarea><br>
    <button onclick="saveNote()">Save Note</button>
    <h3>Saved Notes:</h3>
    <ul id="notesList"></ul>
  </div>

  <!-- Firebase Scripts -->
  <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-auth.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.0.0/firebase-firestore.js"></script>

  <script>
    // 🔹 1. Replace with your Firebase config
    const firebaseConfig = {
      apiKey: "YOUR_API_KEY",
      authDomain: "YOUR_PROJECT.firebaseapp.com",
      projectId: "YOUR_PROJECT_ID"
    };

    // 🔹 2. Initialize Firebase
    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();
    const db = firebase.firestore();

    let currentUser = null;

    // 🔹 3. Calculator Function
    function add() {
      let a = parseFloat(document.getElementById("num1").value);
      let b = parseFloat(document.getElementById("num2").value);
      document.getElementById("calcResult").innerText = "Result = " + (a + b);
    }

    // 🔹 4. Signup Function
    function signup() {
      let email = document.getElementById("email").value;
      let pass = document.getElementById("password").value;
      auth.createUserWithEmailAndPassword(email, pass)
        .then(user => {
          document.getElementById("authMsg").innerText = "✅ Account Created!";
        })
        .catch(err => document.getElementById("authMsg").innerText = "❌ " + err.message);
    }

    // 🔹 5. Login Function
    function login() {
      let email = document.getElementById("email").value;
      let pass = document.getElementById("password").value;
      auth.signInWithEmailAndPassword(email, pass)
        .then(userCred => {
          currentUser = userCred.user;
          document.getElementById("authMsg").innerText = "✅ Logged in!";
          document.getElementById("notesCard").style.display = "block";
          loadNotes();
        })
        .catch(err => document.getElementById("authMsg").innerText = "❌ " + err.message);
    }

    // 🔹 6. Save Note to Firestore
    function saveNote() {
      let note = document.getElementById("noteText").value;
      if (note.trim() === "") return;
      db.collection("notes").add({
        uid: currentUser.uid,
        text: note,
        time: new Date()
      }).then(() => {
        document.getElementById("noteText").value = "";
        loadNotes();
      });
    }

    // 🔹 7. Load Notes from Firestore
    function loadNotes() {
      db.collection("notes").where("uid", "==", currentUser.uid).orderBy("time", "desc")
        .get().then(snapshot => {
          let list = document.getElementById("notesList");
          list.innerHTML = "";
          snapshot.forEach(doc => {
            let li = document.createElement("li");
            li.innerText = doc.data().text;
            list.appendChild(li);
          });
        });
    }
  </script>
</body>
</html>


